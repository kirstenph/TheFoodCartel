<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <title>Document</title>
</head>
<body>
            <%- include('../partials/header_imports'); %>
            <%- include('../partials/dashboard/topbar.ejs'); %>
            <%- include('../partials/dashboard/sidebar.ejs'); %>
            <div class="container">
                <div class="row">
                    <div class="col-md-11 m-auto mt-5 pt-5">
                      <div class="mb-3">
                      <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                          Reserve a Table
                      </button>
                        <!-- Modal -->
                        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                          <div class="modal-dialog">
                            <div class="modal-content">
                              <div class="modal-header">
                                <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                              </div>
                              <form action="/reservation" method="POST">
                                  <div class="modal-body">
                                      <div class="mb-1">
                                          <label for="exampleFormControlInput1" class="form-label">Table #</label>
                                          <select name="tablenum" id="exampleFormControlInput1">
                                            <option value=1>Table 1</option>
                                            <option value=2>Table 2</option>
                                            <option value=3>Table 3</option>
                                            <option value=4>Table 4</option>
                                            <option value=5>Table 5</option>
                                          </select>
                                      </div>
                                      <div class="mb-1">
                                          <label for="exampleFormControlTextarea1" class="form-label"># of Guests</label>
                                          <input type="number" name="guestnum" min="1" min="1" id="exampleFormControlInput1" placeholder="# of Guests" required/>
                                      </div>
                                      <div class="mb-1">
                                          <label for="exampleFormControlTextarea1" class="form-label">Date</label>
                                          <input type="date" name="date" class="form-control" id="exampleFormControlInput1" placeholder="Date" required />
                                      </div>
                                      <div class="mb-1">
                                          <label for="exampleFormControlTextarea1" class="form-label">Time</label>
                                          <input
                                          type="time"
                                          name="time"
                                          min="11:00"
                                          max="22:00"
                                          defaultValue="11:00"
                                          class="form-control"
                                          id="exampleFormControlInput1"
                                          required
                                        />
                                      </div>
                                      <div class="mb-1">
                                        <label for="exampleFormControlTextarea1" class="form-label">Description</label>
                                        <textarea
                                        name="description"
                                        cols="10"
                                        rows="3"
                                        maxlength="100"
                                        class="form-control"
                                        id="exampleFormControlInput1"
                                        placeholder="Description"
                                        required
                                      ></textarea>
                                      </div>
                                  </div>
                                  <div class="modal-footer">
                                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                  <button type="submit" class="btn btn-primary">Reserve a Table</button>
                                  </div>
                              </form>
                            </div>
                          </div>
                        </div>
                      </div>

                        <table id="users-list" class="table table-dark table-striped">
                            <thead>
                                <tr>
                                <th scope="col">Table #</th>
                                <th scope="col"># of Guests</th>
                                <th scope="col">Date</th>
                                <th scope="col">Time</th>
                                <th scope="col">Description</th>
                                <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% allReservations.map((name) => { %>
                                    <tr>
                                        <th><%= name.tablenum %></th>
                                        <td><%= name.guestnum %></td>
                                        <td><%= name.date.toDateString() %></td>
                                        <td><%= name.time %></td>
                                        <td style="word-wrap: break-word; min-width: 160px; max-width: 160px;"><%= name.description %></td>
                                        <td>
                                          <div>
                                          <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal<%= name.id  %>">
                                              Edit
                                          </button>
                                            <!-- Modal -->
                                            <div class="modal fade" id="exampleModal<%= name.id  %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                              <div class="modal-dialog">
                                                <div class="modal-content">
                                                  <div class="modal-header">
                                                    <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                  </div>
                                                  <form action="/reservation/<%= name.id %>?_method=PUT" method="POST">
                                                    <div class="modal-body">
                                                      <div class="mb-1">
                                                          <label for="exampleFormControlInput1" class="form-label">Table #</label>
                                                          <select name="tablenum" id="exampleFormControlInput1">
                                                            <option value=1>Table 1</option>
                                                            <option value=2>Table 2</option>
                                                            <option value=3>Table 3</option>
                                                            <option value=4>Table 4</option>
                                                            <option value=5>Table 5</option>
                                                          </select>
                                                      </div>
                                                      <div class="mb-1">
                                                          <label for="exampleFormControlTextarea1" class="form-label"># of Guests</label>
                                                          <input
                                                          type="number"
                                                          name="guestnum"
                                                          min="1"
                                                          min="1"
                                                          id="exampleFormControlInput1"
                                                          placeholder="# of Guests"
                                                          value="<%= name.guestnum %>"
                                                          required/>
                                                      </div>
                                                      <div class="mb-1">
                                                          <label for="exampleFormControlTextarea1" class="form-label">Date</label>
                                                          <input
                                                          type="date"
                                                          name="date"
                                                          class="form-control"
                                                          id="exampleFormControlInput1"
                                                          placeholder="Date"
                                                          value="<%= name.date %>"
                                                          required />
                                                      </div>
                                                      <div class="mb-1">
                                                          <label for="exampleFormControlTextarea1" class="form-label">Time</label>
                                                          <input
                                                          type="time"
                                                          name="time"
                                                          min="11:00"
                                                          max="22:00"
                                                          class="form-control"
                                                          id="exampleFormControlInput1"
                                                          value="<%= name.time %>"
                                                          required
                                                        />
                                                      </div>
                                                      <div class="mb-1">
                                                        <label for="exampleFormControlTextarea1" class="form-label">Description</label>
                                                        <textarea
                                                        name="description"
                                                        cols="10"
                                                        rows="3"
                                                        maxlength="100"
                                                        class="form-control"
                                                        id="exampleFormControlInput1"
                                                        placeholder="<%= name.description %>"
                                                        required
                                                      ></textarea>
                                                      </div>
                                                  </div>
                                                  <div class="modal-footer">
                                                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                  <button type="submit" class="btn btn-primary">Reserve a Table</button>
                                                  </div>
                                                  </form>
                                                </div>
                                              </div>
                                            </div>
                                          </div>
                                          <div>
                                            <form action="/reservation/<%= name.id  %>?_method=DELETE" method="POST">
                                                <button type="submit" class="btn btn-danger">Delete</button>
                                            </form>
                                          </div>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>     

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css">
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    
    <script>
      $(document).ready( function () {
        $('#users-list').DataTable();
    } );
  </script>

</body>
</html>